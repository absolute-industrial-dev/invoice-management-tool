{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "invoice-management-tool",
  "version": "0.1.0",
  "identifier": "com.invoice-management-tool.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AISI Invoice Management Tool",
        "width": 800,
        "height": 600,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon-16x16.png",
      "icons/favicon-32x32.png",
      "icons/favicon.ico"
    ]
  }
}
